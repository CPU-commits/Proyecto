{{#each data}}
    <section class="pet">
        <div class="pet__container">
            <div class="pet__img">
                <h2>{{name}}</h2>
                <img src="img/mascota.png">
            </div>
            <div class="pet__bar">
                <div class="pet__bar--eat" onclick="hungry(20)">
                    <h3>Hambre</h3>
                    <p>{{porcentaje hungry}}</p>
                </div>
                <div class="pet__bar--love">
                    <h3>Amor</h3>
                    <p>{{love}}%</p>
                </div>
                <div class="pet__bar--shower">
                    <h3>Ba√±o</h3>
                    <p>{{bano}}%</p>
                </div>
            </div>
        </div>
    </section>
{{else}}
    NO HAY DATOS
{{/each}}

<script>
    const hungry = async (food) =>{
        const fetchData = await fetch(`/mascota/food/${food}`, {
            method: 'put'
        })
        const data = await fetchData.json()
        if (data.success){
            location.reload()
        }
    }
</script>